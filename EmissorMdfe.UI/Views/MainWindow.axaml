<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:EmissorMdfe.UI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
    Width="1100" Height="700"
    WindowStartupLocation="CenterScreen"
    x:Class="EmissorMdfe.UI.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    Title="Emissor MDF-e Core">

    <Grid ColumnDefinitions="250, *">

        <Border Grid.Column="0" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel Margin="0, 20, 0, 0">
                <StackPanel Orientation="Horizontal" Margin="20, 10, 20, 30" Spacing="10">
                    <materialIcons:MaterialIcon Kind="TruckFast" Width="32" Height="32"
                        Foreground="#673AB7" />
                    <TextBlock Text="Core MDF-e" FontSize="20" FontWeight="Bold"
                        VerticalAlignment="Center" Foreground="#333333" />
                </StackPanel>

                <Button Command="{Binding AbrirDashboardCommand}" Classes="Flat" Margin="10, 5"
                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="15, 10"
                    Background="{Binding IsDashboard, StringFormat='#EDE7F6|Transparent'}"
                    Foreground="{Binding IsDashboard, StringFormat='#673AB7|Black'}">
                    <StackPanel Orientation="Horizontal" Spacing="15">
                        <materialIcons:MaterialIcon Kind="ViewDashboard" Width="20" Height="20" />
                        <TextBlock Text="Dashboard" VerticalAlignment="Center"
                            FontWeight="{Binding IsDashboard, StringFormat='SemiBold|Normal'}" />
                    </StackPanel>
                </Button>

                <Button Command="{Binding IniciarEmissaoCommand}" Classes="Flat" Margin="10, 5"
                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="15, 10"
                    Background="{Binding IsWizardVisible, StringFormat='#EDE7F6|Transparent'}"
                    Foreground="{Binding IsWizardVisible, StringFormat='#673AB7|Black'}">
                    <StackPanel Orientation="Horizontal" Spacing="15">
                        <materialIcons:MaterialIcon Kind="FileDocumentPlus" Width="20" Height="20" />
                        <TextBlock Text="Emitir MDF-e" VerticalAlignment="Center"
                            FontWeight="{Binding IsWizardVisible, StringFormat='SemiBold|Normal'}" />
                    </StackPanel>
                </Button>

                <Button Command="{Binding AbrirVeiculosCommand}" Classes="Flat" Margin="10, 5"
                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="15, 10"
                    Background="{Binding IsVeiculos, StringFormat='#EDE7F6|Transparent'}"
                    Foreground="{Binding IsVeiculos, StringFormat='#673AB7|Black'}">
                    <StackPanel Orientation="Horizontal" Spacing="15">
                        <materialIcons:MaterialIcon Kind="TruckOutline" Width="20" Height="20" />
                        <TextBlock Text="Meus Veículos" VerticalAlignment="Center"
                            FontWeight="{Binding IsVeiculos, StringFormat='SemiBold|Normal'}" />
                    </StackPanel>
                </Button>

                <Button Command="{Binding AbrirCondutoresCommand}" Classes="Flat" Margin="10, 5"
                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Padding="15, 10"
                    Background="{Binding IsCondutores, StringFormat='#EDE7F6|Transparent'}"
                    Foreground="{Binding IsCondutores, StringFormat='#673AB7|Black'}">
                    <StackPanel Orientation="Horizontal" Spacing="15">
                        <materialIcons:MaterialIcon Kind="AccountTieHat" Width="20" Height="20" />
                        <TextBlock Text="Condutores" VerticalAlignment="Center"
                            FontWeight="{Binding IsCondutores, StringFormat='SemiBold|Normal'}" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#F4F6F8" Padding="40">
            <Panel>

                <StackPanel IsVisible="{Binding IsDashboard}" Spacing="20">
                    <TextBlock Text="Resumo Geral" FontSize="28" FontWeight="Light"
                        Foreground="#222222" />
                    <TextBlock Text="Acompanhe as emissões e o status da frota." FontSize="14"
                        Foreground="Gray" Margin="0,-15,0,10" />

                    <Grid ColumnDefinitions="*, 20, *, 20, *" Margin="0, 10, 0, 30">

                        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20"
                            BoxShadow="0 4 15 0 #0A000000">
                            <StackPanel>
                                <materialIcons:MaterialIcon Kind="CheckDecagram"
                                    Foreground="#4CAF50" Width="36" Height="36"
                                    HorizontalAlignment="Left" />
                                <TextBlock Text="Emitidos Hoje" Foreground="#555555"
                                    Margin="0,15,0,0" />
                                <TextBlock Text="12" FontWeight="Bold" FontSize="36"
                                    Foreground="#333333" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="20"
                            BoxShadow="0 4 15 0 #0A000000">
                            <StackPanel>
                                <materialIcons:MaterialIcon Kind="TruckFastOutline"
                                    Foreground="#FF9800" Width="36" Height="36"
                                    HorizontalAlignment="Left" />
                                <TextBlock Text="MDF-es em Trânsito" Foreground="#555555"
                                    Margin="0,15,0,0" />
                                <TextBlock Text="3" FontWeight="Bold" FontSize="36"
                                    Foreground="#333333" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="4" Background="White" CornerRadius="8" Padding="20"
                            BoxShadow="0 4 15 0 #0A000000">
                            <StackPanel>
                                <materialIcons:MaterialIcon Kind="AlertCircleOutline"
                                    Foreground="#F44336" Width="36" Height="36"
                                    HorizontalAlignment="Left" />
                                <TextBlock Text="Rejeitados Sefaz" Foreground="#555555"
                                    Margin="0,15,0,0" />
                                <TextBlock Text="0" FontWeight="Bold" FontSize="36"
                                    Foreground="#333333" />
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Background="White" CornerRadius="8" Padding="30"
                        BoxShadow="0 4 15 0 #0A000000">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                            Spacing="20">
                            <materialIcons:MaterialIcon Kind="FileDocumentPlus" Width="48"
                                Height="48" Foreground="#E0E0E0" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Nova Viagem Programada?" FontSize="18"
                                    FontWeight="SemiBold" />
                                <TextBlock Text="Inicie a emissão do MDF-e para liberar o veículo."
                                    Foreground="Gray" />
                            </StackPanel>
                            <Button Content="Emitir MDF-e" Command="{Binding IniciarEmissaoCommand}"
                                Classes="Primary" Theme="{StaticResource SolidButton}"
                                Padding="20,10" CornerRadius="20" Margin="20,0,0,0" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel IsVisible="{Binding IsWizardVisible}" Spacing="20">
                    <TextBlock Text="Nova Emissão de MDF-e" FontSize="28" FontWeight="Light"
                        Foreground="#222222" />
                    <TextBlock Text="Preencha os dados abaixo. Aperte ESC para cancelar."
                        FontSize="14" Foreground="Gray" Margin="0,-15,0,20" />

                    <Border Background="White" CornerRadius="8" BoxShadow="0 4 15 0 #10000000"
                        Padding="30">
                        <StackPanel Spacing="20">
                            <Grid ColumnDefinitions="*, *, *, *" Margin="0, 0, 0, 30">
                                <TextBlock Grid.Column="0" Text="1. Viagem"
                                    FontWeight="{Binding IsPasso1, StringFormat='Bold|Normal'}"
                                    Foreground="{Binding IsPasso1, StringFormat='#673AB7|Gray'}"
                                    HorizontalAlignment="Center" />
                                <TextBlock Grid.Column="1" Text="2. Documentos"
                                    FontWeight="{Binding IsPasso2, StringFormat='Bold|Normal'}"
                                    Foreground="{Binding IsPasso2, StringFormat='#673AB7|Gray'}"
                                    HorizontalAlignment="Center" />
                                <TextBlock Grid.Column="2" Text="3. Transporte"
                                    FontWeight="{Binding IsPasso3, StringFormat='Bold|Normal'}"
                                    Foreground="{Binding IsPasso3, StringFormat='#673AB7|Gray'}"
                                    HorizontalAlignment="Center" />
                                <TextBlock Grid.Column="3" Text="4. Emissão"
                                    FontWeight="{Binding IsPasso4, StringFormat='Bold|Normal'}"
                                    Foreground="{Binding IsPasso4, StringFormat='#673AB7|Gray'}"
                                    HorizontalAlignment="Center" />
                            </Grid>

                            <Separator Background="#EEEEEE" Margin="0,-20,0,10" />

                            <StackPanel IsVisible="{Binding IsPasso1}" Spacing="20">
                                <Grid ColumnDefinitions="*, 20, *" RowDefinitions="Auto, 20, Auto">
                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="UF de Carregamento" FontWeight="SemiBold"
                                            Foreground="#555555" Margin="0,0,0,5" FontSize="13" />
                                        <TextBox Classes="Outline"
                                            Theme="{StaticResource OutlineTextBox}"
                                            Watermark="Ex: SP" />
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="2">
                                        <TextBlock Text="UF de Descarregamento"
                                            FontWeight="SemiBold" Foreground="#555555"
                                            Margin="0,0,0,5" FontSize="13" />
                                        <TextBox Classes="Outline"
                                            Theme="{StaticResource OutlineTextBox}"
                                            Watermark="Ex: MG" />
                                    </StackPanel>
                                    <StackPanel Grid.Row="2" Grid.Column="0">
                                        <TextBlock Text="Data de Início da Viagem"
                                            FontWeight="SemiBold" Foreground="#555555"
                                            Margin="0,0,0,5" FontSize="13" />
                                        <DatePicker HorizontalAlignment="Stretch" />
                                    </StackPanel>
                                </Grid>
                                <Grid ColumnDefinitions="Auto, *, Auto" Margin="0, 30, 0, 0">
                                    <Button Grid.Column="0" Content="Cancelar (ESC)"
                                        Command="{Binding CancelarCommand}" HotKey="Escape"
                                        Classes="Flat" Foreground="#F44336" FontWeight="SemiBold" />
                                    <Button Grid.Column="2" Content="Avançar"
                                        Command="{Binding AvancarCommand}" Classes="Primary"
                                        Theme="{StaticResource SolidButton}" Padding="30,10"
                                        CornerRadius="20" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel IsVisible="{Binding IsVeiculos}" Spacing="20">
                    <Grid ColumnDefinitions="*, Auto">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Meus Veículos" FontSize="28" FontWeight="Light"
                                Foreground="#222222" />
                            <TextBlock Text="Gerencie a frota para usar o preenchimento automático."
                                FontSize="14" Foreground="Gray" Margin="0,5,0,0" />
                        </StackPanel>
                        <Button Grid.Column="1" Content="+ Novo Veículo" Classes="Primary"
                            Theme="{StaticResource SolidButton}" Background="#673AB7"
                            CornerRadius="20" Padding="20,10" VerticalAlignment="Center" />
                    </Grid>

                    <Border Background="White" CornerRadius="8" BoxShadow="0 2 10 0 #0A000000"
                        Margin="0,10,0,0" Padding="0,0,0,10">
                        <StackPanel>
                            <Grid ColumnDefinitions="2*, 3*, 2*, *" Background="#F8F9FA"
                                Padding="20,15" Margin="0,0,0,10">
                                <TextBlock Grid.Column="0" Text="PLACA" FontWeight="SemiBold"
                                    Foreground="#777777" FontSize="12" />
                                <TextBlock Grid.Column="1" Text="TIPO" FontWeight="SemiBold"
                                    Foreground="#777777" FontSize="12" />
                                <TextBlock Grid.Column="2" Text="RNTRC" FontWeight="SemiBold"
                                    Foreground="#777777" FontSize="12" />
                                <TextBlock Grid.Column="3" Text="AÇÕES" FontWeight="SemiBold"
                                    Foreground="#777777" FontSize="12" HorizontalAlignment="Right" />
                            </Grid>

                            <Border BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" Padding="20,10">
                                <Grid ColumnDefinitions="2*, 3*, 2*, *">
                                    <StackPanel Grid.Column="0" Orientation="Horizontal"
                                        Spacing="10">
                                        <Border Background="#EDE7F6" CornerRadius="4" Padding="5,2">
                                            <TextBlock Text="ABC-1234" FontWeight="Bold"
                                                Foreground="#673AB7" VerticalAlignment="Center" />
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="Veículo de Tração"
                                        VerticalAlignment="Center" Foreground="#333333" />
                                    <TextBlock Grid.Column="2" Text="12345678"
                                        VerticalAlignment="Center" Foreground="#333333" />
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="5"
                                        HorizontalAlignment="Right">
                                        <Button Classes="Flat" Padding="5" Foreground="#2196F3">
                                            <materialIcons:MaterialIcon Kind="PencilOutline" />
                                        </Button>
                                        <Button Classes="Flat" Padding="5" Foreground="#F44336">
                                            <materialIcons:MaterialIcon Kind="TrashCanOutline" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" Padding="20,10">
                                <Grid ColumnDefinitions="2*, 3*, 2*, *">
                                    <StackPanel Grid.Column="0" Orientation="Horizontal"
                                        Spacing="10">
                                        <Border Background="#EDE7F6" CornerRadius="4" Padding="5,2">
                                            <TextBlock Text="XYZ-9876" FontWeight="Bold"
                                                Foreground="#673AB7" VerticalAlignment="Center" />
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="Reboque"
                                        VerticalAlignment="Center" Foreground="#333333" />
                                    <TextBlock Grid.Column="2" Text="-" VerticalAlignment="Center"
                                        Foreground="#333333" />
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="5"
                                        HorizontalAlignment="Right">
                                        <Button Classes="Flat" Padding="5" Foreground="#2196F3">
                                            <materialIcons:MaterialIcon Kind="PencilOutline" />
                                        </Button>
                                        <Button Classes="Flat" Padding="5" Foreground="#F44336">
                                            <materialIcons:MaterialIcon Kind="TrashCanOutline" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel IsVisible="{Binding IsCondutores}" Spacing="20">
                    <Grid ColumnDefinitions="*, Auto">
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Condutores" FontSize="28" FontWeight="Light"
                                Foreground="#222222" />
                            <TextBlock Text="Cadastre os motoristas responsáveis pelo transporte."
                                FontSize="14" Foreground="Gray" Margin="0,5,0,0" />
                        </StackPanel>
                        <Button Grid.Column="1" Content="+ Novo Condutor" Classes="Primary"
                            Theme="{StaticResource SolidButton}" Background="#673AB7"
                            CornerRadius="20" Padding="20,10" VerticalAlignment="Center" />
                    </Grid>

                    <Border Background="White" CornerRadius="8" BoxShadow="0 2 10 0 #0A000000"
                        Margin="0,10,0,0" Padding="0,0,0,10">
                        <StackPanel>
                            <Grid ColumnDefinitions="3*, 2*, *" Background="#F8F9FA" Padding="20,15"
                                Margin="0,0,0,10">
                                <TextBlock Grid.Column="0" Text="NOME COMPLETO"
                                    FontWeight="SemiBold" Foreground="#777777" FontSize="12" />
                                <TextBlock Grid.Column="1" Text="CPF" FontWeight="SemiBold"
                                    Foreground="#777777" FontSize="12" />
                                <TextBlock Grid.Column="2" Text="AÇÕES" FontWeight="SemiBold"
                                    Foreground="#777777" FontSize="12" HorizontalAlignment="Right" />
                            </Grid>

                            <Border BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" Padding="20,10">
                                <Grid ColumnDefinitions="3*, 2*, *">
                                    <StackPanel Grid.Column="0" Orientation="Horizontal"
                                        Spacing="15">
                                        <materialIcons:MaterialIcon Kind="AccountCircle"
                                            Foreground="#BDBDBD" Width="30" Height="30" />
                                        <TextBlock Text="João Silva da Costa" FontWeight="SemiBold"
                                            VerticalAlignment="Center" Foreground="#333333" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="123.456.789-00"
                                        VerticalAlignment="Center" Foreground="Gray" />
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="5"
                                        HorizontalAlignment="Right">
                                        <Button Classes="Flat" Padding="5" Foreground="#2196F3">
                                            <materialIcons:MaterialIcon Kind="PencilOutline" />
                                        </Button>
                                        <Button Classes="Flat" Padding="5" Foreground="#F44336">
                                            <materialIcons:MaterialIcon Kind="TrashCanOutline" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </Panel>
        </Border>
    </Grid>
</Window>